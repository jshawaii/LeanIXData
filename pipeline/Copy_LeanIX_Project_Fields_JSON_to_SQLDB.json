{
	"name": "Copy_LeanIX_Project_Fields_JSON_to_SQLDB",
	"properties": {
		"activities": [
			{
				"name": "Copy_Project_Fields_JSON",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true
						}
					},
					"sink": {
						"type": "AzureSqlSink"
					},
					"enableStaging": false,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"path": "['id']"
								},
								"sink": {
									"name": "id",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['fields'][0]['name']"
								},
								"sink": {
									"name": "name",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['fields'][0]['data']['type']"
								},
								"sink": {
									"name": "type",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['fields'][0]['data']['phases'][0]['startDate']"
								},
								"sink": {
									"name": "phasesStartDate",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['fields'][0]['data']['phases'][0]['phase']"
								},
								"sink": {
									"name": "phasesPhase",
									"type": "String"
								}
							},
							{
								"source": {
									"path": "['fields'][0]['dataType']"
								},
								"sink": {
									"name": "dataType",
									"type": "String"
								}
							}
						],
						"collectionReference": "$['data']"
					}
				},
				"inputs": [
					{
						"referenceName": "Output_LeanIX_Project_JSON_to_BLOB",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "Output_LeanIX_Project_Fields_SQLDB",
						"type": "DatasetReference"
					}
				]
			}
		],
		"annotations": []
	}
}